{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main",
    "logs"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "fs:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "fetch-library",
          "cmd": "fetch-library",
          "sidecar": true
        }
      ]
    },
    {
      "identifier": "fs:allow-read",
      "allow": [
        { "path": "/Users/factor8/Documents/GitHub/TagDeck/**" },
        { "path": "/Users/factor8/Documents/GitHub/TagDeck/**/*" },
        { "path": "/Users/factor8/**" },
        { "path": "/Users/factor8/**/*" }
      ]
    },
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        { "path": "/Users/factor8/Documents/GitHub/TagDeck/**" },
        { "path": "/Users/factor8/Documents/GitHub/TagDeck/**/*" },
        { "path": "/Users/factor8/**" },
        { "path": "/Users/factor8/**/*" }
      ]
    },
    {
      "identifier": "fs:allow-stat",
      "allow": [
        { "path": "/Users/factor8/Documents/GitHub/TagDeck/**" },
        { "path": "/Users/factor8/**" }
      ]
    }
  ]
}